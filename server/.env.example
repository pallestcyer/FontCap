# ===========================================
# SUPABASE CONFIGURATION (Required)
# ===========================================
# Get these from your Supabase project dashboard:
# https://app.supabase.com/project/_/settings/api

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===========================================
# JWT CONFIGURATION (Required in Production)
# ===========================================
# Generate secure secrets with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# CRITICAL: These MUST be set in production - server will fail to start without them

JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING

# ===========================================
# SERVER CONFIGURATION
# ===========================================

NODE_ENV=development
PORT=3000

# CORS Configuration (comma-separated allowed origins)
# In production, set this to your Electron app's origin or your web domain
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================

# File Upload Limits (bytes) - default: 10MB
MAX_FILE_SIZE=10485760

# Optional: Email configuration for notifications (future feature)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=
